<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue1"
    tools:context=".RegisterStep2Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:layout_gravity="center_horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_gravity="center"
                app:cardCornerRadius="25dp">

                <LinearLayout
                    android:id="@+id/first_input_medhistory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="18dp"
                    android:paddingVertical="14dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="15dp"
                        android:paddingHorizontal="20dp"
                        android:text="@string/lengkapi_data"
                        android:textAlignment="center"
                        android:textSize="26sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="20dp"
                        android:layout_marginBottom="30dp"
                        android:paddingHorizontal="5dp"
                        android:text="@string/lengkapi_data_2"
                        android:textAlignment="center"
                        android:textSize="20sp" />

                    <LinearLayout
                        android:id="@+id/view_med_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:text="@string/penyakit"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_penyakit"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/custom_edit_text"
                                android:text="Contoh: TBC"
                                android:minHeight="48dp"
                                android:textSize="18sp"
                                android:padding="12dp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:layout_marginTop="15dp"
                                android:text="@string/lamaPenyakit"
                                android:textSize="18sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="48dp"
                                android:background="@drawable/custom_edit_text"
                                android:paddingStart="6dp"
                                android:paddingVertical="6dp"
                                android:paddingEnd="2dp"
                                android:layout_weight="1"
                                android:layout_marginBottom="10dp"
                                android:layout_gravity="center_horizontal"
                                android:gravity="center_vertical">

                                <TextView
                                    android:id="@+id/tv_med_years"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@color/white"
                                    android:minHeight="48dp"
                                    android:gravity="center_vertical"
                                    android:text="Cth: 1 Tahun"
                                    android:paddingStart="5dp"
                                    android:paddingEnd="0dp"
                                    android:textSize="18sp"
                                    tools:ignore="SpeakableTextPresentCheck" />
                            </RelativeLayout>

                            <Space
                                android:layout_width="12dp"
                                android:layout_height="wrap_content"/>

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="48dp"
                                android:background="@drawable/custom_edit_text"
                                android:paddingStart="6dp"
                                android:paddingVertical="6dp"
                                android:paddingEnd="2dp"
                                android:layout_weight="1"
                                android:layout_marginBottom="10dp"
                                android:layout_gravity="center_horizontal"
                                android:gravity="center_vertical">

                                <TextView
                                    android:id="@+id/tv_med_months"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:background="@color/white"
                                    android:minHeight="48dp"
                                    android:gravity="center_vertical"
                                    android:paddingStart="5dp"
                                    android:paddingEnd="0dp"
                                    android:text="Cth: 5 Bulan"
                                    android:textSize="18sp"
                                    tools:ignore="SpeakableTextPresentCheck" />
                            </RelativeLayout>
                        </LinearLayout>

                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_add_medhistory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="10dp"
                        android:backgroundTint="@color/blue1"
                        android:fontFamily="@font/inter_bold"
                        android:text="@string/tambah_penyakit"
                        android:textSize="18sp"
                        app:cornerRadius="13dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_save_medhistory"
                        style="@style/CustomBlueRoundButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/simpan_riwayat_penyakit"
                        android:textSize="18sp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="30dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginVertical="8dp"
                        android:gravity="center_vertical">

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1.5dp"
                            android:layout_weight="1"
                            android:background="@color/grey" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Atau"
                            android:textSize="16sp"
                            android:fontFamily="@font/inter_semibold"
                            android:layout_marginVertical="6dp"
                            android:layout_marginHorizontal="18dp"
                            android:gravity="center" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1.5dp"
                            android:layout_weight="1"
                            android:background="@color/grey" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="5dp"
                        android:paddingHorizontal="5dp"
                        android:text="Tidak memiliki riwayat penyakit?"
                        android:fontFamily="@font/inter_semibold"
                        android:textAlignment="center"
                        android:textSize="22sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="5dp"
                        android:paddingHorizontal="5dp"
                        android:text="Klik lanjut untuk ke tahap berikutnya."
                        android:textAlignment="center"
                        android:textSize="18sp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_next_medhistory"
                        style="@style/CustomWhiteRoundButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/next"
                        android:textSize="18sp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="15dp"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
    </LinearLayout>

</ScrollView>